{
  "pluginAlias": "BlaubergVento",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device Name",
              "type": "string",
              "required": true,
              "minLength": 1,
              "placeholder": "Bedroom Fan",
              "description": "Accessory name in Home app"
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "format": "ipv4",
              "required": true,
              "placeholder": "192.168.1.123",
              "description": "Your device static IP address"
            },
            "deviceId": {
              "title": "Device ID",
              "type": "string",
              "required": true,
              "pattern": "^[A-Z\\d]{16}$",
              "minLength": 16,
              "maxLength": 16,
              "placeholder": "0123456789ABCDEF",
              "description": "Your device ID (you can find it in Blauberg Vento V.2 mobile app)"
            },
            "password": {
              "title": "Password",
              "type": "string",
              "required": true,
              "pattern": "^[A-z\\d]{1,8}$",
              "minLength": 1,
              "maxLength": 8,
              "default": "1111",
              "description": "Your device password (default 1111, can be changed in mobile app)"
            },
            "resetAlarm": {
              "title": "Reset alarms",
              "type": "boolean",
              "required": true,
              "default": false,
              "description": "Automatically reset alarms for this device (checked every 5 minutes)"
            },
            "humidity": {
              "title": "Show Humidity Sensor",
              "type": "boolean",
              "required": true,
              "default": false,
              "description": "Show Humidity Sensor data in Home app"
            },
            "humidityName": {
              "title": "Humidity Sensor Name",
              "type": "string",
              "required": true,
              "minLength": 1,
              "placeholder": "Bedroom Fan Humidity",
              "description": "Humidity Sensor name in Home app",
              "condition": {
                "functionBody": "return model.devices[arrayIndices].humidity === true;"
              }
            }
          }
        }
      }
    }
  }
}
